
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">

<style>
	body{
		font-family: 'Monserrat', sans-serif;
	}

	input, h4 {
		margin-left: 40px
	}

	h4{
		font-weight: 900;
		font-size: 2em;
		color: #0080A8;
		line-height: 37px;
		margin-bottom: 30px;
	}

	input{
		background-color: #DAF5FA;
		border: none;
		width: 90%;
		font-style: normal;
		font-size: 1.5em;
		font-weight: 400;
		padding: 15px;
		padding-left: 20px;
		margin: 15px;
		color: #C4C4C4;
	}

	img{
		position: relative;
		margin-bottom: 10px;
		margin-left: 20px;
	}

	#triangles{
		margin-left:0;
		height: 100%
	}

	#create{
		background-color: #0080A8;
		margin-top: 30px;
		margin-bottom: 0;
		font-weight:400;
		font-size:2em;

	}
	
	

</style>





<div class='container-fluid border-0'>
	
		<div class='row'>
			<div class='col-sm'>
				<div>
					<h4>Let's create your PMI e-mail signature</h4>
				</div>	
				<%= form_for @pmi_email, id:"form" do |f|%>
					<%= f.text_field :name,  required: true, placeholder: 'Full Name'%>
					<%= f.text_field :credentials, placeholder: 'Credentials (Optional)' %>
					<%= f.text_field :position, required: true, placeholder: 'Position name (Optional)' %>
					<%= f.email_field :email, required: true, placeholder: 'Email' %>
					<%= f.telephone_field :mobile, placeholder: 'Mobile Number (Optional)' %>
					<%= f.telephone_field :phone, placeholder: 'Phone Number (Optional)' %>
					<%= f.submit "Create", class:'btn btn-primary', id:'create' %>
				<% end %>
			</div>
			<div class='col-sm'>
				<%= image_tag 'pmi_email/Back-triangle.png', id: "triangles"%>
			</div>
		</div>
	
		


</div>


