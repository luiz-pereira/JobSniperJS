<% if flash[:alert] %>
	<div class='alert alert-danger'>
		<%= flash.now[:alert] %>
	</div>
<% end %>

<div class="container col-md-4 col-md-offset-4 centered">
	<%= form_for :session, html: {class: 'text-center border border-light p-5'} do |f| %>
		<p class="h4 mb-4 ">Sign in</p>

		<%= f.email_field :email, class: 'form-control mb-4', placeholder: "E-mail", required: true %>
		<%= f.password_field :password, class: 'form-control mb-4', placeholder: "Password", required: true %>
		<%= f.submit "Sign in", class: 'btn btn-info my-4 btn-block'%>
		<%= yield %>
		<p>By clicking
			<em>Sign in</em> you agree to our
			<a href="" target="_blank">terms of service</a>
		</p>
	<% end %>
</div>